{
    "name": "figma-discord-presence",
    "version": "1.0.0",
    "description": "Update your Discord activity status with a rich presence from Figma",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "dist": "electron-builder",
        "publish": "electron-builder --publish always"
    },
    "keywords": [
        "figma",
        "discord",
        "rich-presence",
        "electron",
        "desktop"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-store": "^8.1.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.figma.discord.presence",
        "productName": "Figma Discord Presence",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "files": [
            "src/**/*",
            "assets/**/*",
            "package.json"
        ],
        "directories": {
            "output": "dist"
        }
    }
}